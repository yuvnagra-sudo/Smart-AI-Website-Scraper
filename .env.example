# ============================================================
# VC Enrichment Web - Environment Variables
# Copy this file to .env and fill in your values.
# ============================================================

# --- Database ---
# MySQL connection string (required for all saves to work)
DATABASE_URL=mysql://user:password@host:3306/dbname

# --- OpenAI ---
# Required for AI-powered data extraction (investment niches, team members, etc.)
OPENAI_API_KEY=sk-...
# Optional: override the model used for all LLM calls (default: gpt-4o-mini)
# OPENAI_MODEL=gpt-4o-mini

# --- Jina AI (website fetching) ---
# Optional but strongly recommended — Jina API key for fast website content extraction
# Without this, falls back to Puppeteer (slower, resource-heavy)
JINA_API_KEY=jina_...

# --- Authentication ---
# Password required to log in to the app
ADMIN_PASSWORD=choose-a-strong-password
# Secret used to sign session JWTs — use a long random string
JWT_SECRET=some-long-random-secret-string

# --- File Storage (AWS S3) ---
# Required for uploading Excel input files and storing result files
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# --- Vayne API (optional enrichment provider) ---
VAYNE_API_KEY=...

# --- Development ---
# Set to "true" to skip password login and use a hardcoded admin user.
# NEVER set this in production.
# DEV_BYPASS_AUTH=true
NODE_ENV=development
